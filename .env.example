# ============================================
# PRODUCTION CONFIGURATION
# Web3 Accounting & Audit System - Enterprise Edition
# ============================================

# Application Settings
APP_NAME="Web3 Accounting Enterprise"
APP_VERSION="1.0.0"
ENVIRONMENT="production"  # development, staging, production
DEBUG=false
SECRET_KEY="your-secret-key-here-change-in-production"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4
RELOAD=false

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/web3_accounting"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_MAX_CONNECTIONS=50

# Blockchain Storage
BLOCKCHAIN_STORAGE_PATH="./blockchain_data"
BLOCKCHAIN_BACKUP_PATH="./blockchain_backups"
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24

# Security Settings
JWT_SECRET_KEY="your-jwt-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=12
REQUIRE_2FA=true

# CORS Settings
CORS_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="noreply@yourdomain.com"
SMTP_FROM_NAME="Web3 Accounting System"

# Twilio (for SMS 2FA)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Stripe Payment Integration
STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Subscription Plans
BASIC_PLAN_PRICE_ID=""
PROFESSIONAL_PLAN_PRICE_ID=""
ENTERPRISE_PLAN_PRICE_ID=""

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="web3-accounting-files"

# Monitoring & Logging
SENTRY_DSN=""
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH="./logs/app.log"
LOG_ROTATION_SIZE_MB=100
LOG_RETENTION_DAYS=30

# Analytics
GOOGLE_ANALYTICS_ID=""
MIXPANEL_TOKEN=""

# Web3 Configuration
WEB3_PROVIDER_URL="https://mainnet.infura.io/v3/YOUR-PROJECT-ID"
CHAIN_ID=1  # 1 for Ethereum Mainnet, 137 for Polygon
GAS_LIMIT=300000
MAX_GAS_PRICE_GWEI=100

# Multi-tenancy
MULTI_TENANT_ENABLED=true
MAX_ORGANIZATIONS_PER_USER=5
DEFAULT_ORGANIZATION_STORAGE_GB=100

# Compliance & Audit
AUDIT_LOG_RETENTION_YEARS=7
COMPLIANCE_MODE="strict"  # strict, standard, relaxed
DEFAULT_ACCOUNTING_STANDARD="IFRS"  # IFRS, GAAP, SOCPA
DEFAULT_AUDIT_STANDARD="ISA"  # ISA, US, SAUDI

# Feature Flags
ENABLE_AI_ANALYTICS=true
ENABLE_AUTO_CLASSIFICATION=true
ENABLE_MOBILE_APP=true
ENABLE_API_ACCESS=true
ENABLE_WEBHOOKS=true

# API Keys (for integrations)
OPENAI_API_KEY=""  # For AI features
PLAID_CLIENT_ID=""  # For bank integrations
PLAID_SECRET=""
QUICKBOOKS_CLIENT_ID=""  # For QuickBooks integration
QUICKBOOKS_CLIENT_SECRET=""

# Backup & Recovery
BACKUP_ENCRYPTION_KEY=""
BACKUP_S3_BUCKET=""
DISASTER_RECOVERY_ENABLED=true

# Performance
CACHE_TTL_SECONDS=300
ENABLE_QUERY_CACHE=true
MAX_UPLOAD_SIZE_MB=50
MAX_CONCURRENT_REQUESTS=100

# Localization
DEFAULT_LANGUAGE="en"  # en, ar
DEFAULT_TIMEZONE="UTC"
SUPPORTED_LANGUAGES="en,ar"

# License Management
LICENSE_KEY=""
LICENSE_TYPE="enterprise"  # trial, basic, professional, enterprise
MAX_USERS=unlimited
LICENSE_EXPIRY_DATE=""

# Support & Contact
SUPPORT_EMAIL="support@yourdomain.com"
SUPPORT_PHONE="+1-xxx-xxx-xxxx"
COMPANY_NAME="Your Company Name"
COMPANY_WEBSITE="https://yourdomain.com"
